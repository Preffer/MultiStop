<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:paddingTop="@dimen/item_vertical_margin"
              android:paddingBottom="@dimen/item_vertical_margin" >

    <TextView
        android:id="@+id/itemID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_id"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/itemTotalTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_total_time"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_weight="2" />

    <TextView
        android:id="@+id/itemAddTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_add_time"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_weight="2" />

    <TextView
        android:id="@+id/itemLapTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_lap_time"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_weight="2" />

</LinearLayout>
